.zhifufangshi{
  width:100%;
  height:40rpx;
  margin-top:10rpx;
  padding:20rpx 20rpx 40rpx 20rpx;
  background:rgb(235,237,240);
}
.cart-tab-wrp{
  height: 100rpx;
  position: fixed;
  bottom: 0rpx;
  background: rgba(255, 255, 255, 0.9);
  display: flex;
  flex-direction:row;
  width: 100%;
  z-index: 10;
  color: black
}
.cart-item-total{
  padding-left: 30rpx;
}
.cart-item-icon-wrp{
  width: 110rpx;
  height: 90rpx;
  position: absolute;
  top:-4rpx;
}
.cart-item-icon{
  width: 90rpx;
  height: 90rpx;

}
.cart-item-total-num{
    display: inline-block;
    width: 36rpx;
    height: 36rpx;
    font-size: 22rpx;
    color: white;
