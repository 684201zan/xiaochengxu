@import 'font.wxss';
.shopname-box{
  width:100%;
  height:160rpx;
  background:rgb(237,129,63);
  padding-top:40rpx;
  position:relative;
}
.shoptitle{
   float:left;
   height:60rpx;
   position:absolute;
   top:0;
   bottom:0;
   margin:auto;
   margin-left:40rpx;
   font-size:60rpx;
}
.flex-wrp{
  width:100%;
  height:120rpx;
  display:flex;
  
}
.flex-item{
  width:33.3%;
  line-height:120rpx;
  text-align:center;
}

.weui-tab__content{
    text-align: center;
}

.gouwuche{
  width:100%;
  height:100rpx;
  background:rgb(72,77,84);
  position:fixed;
  bottom:0;
  color:white;
}

/*底部*/
.cart-tab-wrp{
  height: 100rpx;
  position: fixed;
  bottom: 0rpx;
  background: rgba(255, 255, 255, 0.9);
  display: flex;
  flex-direction:row;
  width: 100%;
  z-index: 10;
  color: black
}
.cart-item-total{
  padding-left: 30rpx;
}
.cart-item-icon-wrp{
  width: 110rpx;
  height: 90rpx;
  position: absolute;
  top:-4rpx;
}
.cart-item-icon{
  width: 90rpx;
  height: 90rpx;

}
.cart-item-total-num{
    display: inline-block;
    width: 36rpx;
    height: 36rpx;
    font-size: 22rpx;
    color: white;
    line-height: 36rpx;
    border-radius: 36rpx;
    text-align: center;
    position: absolute;
    right: 2rpx;
}
.cart-item-total-price{
    display: inline-block;
    width: 40rpx;
    height: 40rpx;
    font-size: 36rpx;
    color: #ed7e05;
    line-height: 100rpx;
    text-align: center;
    padding-left: 110rpx;
}
.cart-tab-item-btn{
    width: 160rpx;
    display: block;
    height: 100rpx;
    line-height: 100rpx;
    font-size: 28rpx;
    background: #f5a22d;
    color: #fff;
    float: right;
    text-align: center;
}
.cart-tab-item{
  width: 375rpx;
}

.dish-item-count{
  width: 220rpx;
  display: flex;
  font-size: 26rpx;
  position:absolute;
  right:0;
  bottom:10rpx;
}
.dish-item-tab{
  width: 60rpx;
  height: 60rpx;
}
.dish-item-count-minus{
  width: 60rpx;
  height: 60rpx;
}
.dish-item-count-text{
  color: #ccc;
  font-size: 28rpx;
  line-height: 60rpx;
  text-align: center

}
.dish-item-count-plus{
  width: 60rpx;
  height: 60rpx;
}